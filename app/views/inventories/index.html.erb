<div class="container">
  <h1 class="text-center">All inventories </h1>
  <div class="d-flex align-items-center justify-content-end">
    <%=link_to "Create Inventory", new_user_inventory_path(current_user),class: 'active' %>
  </div>
  <div class="container p-2">
    <%@inventories.each do|inventory|%>
     <div class="row align-items-center ">
        <div class="col">
          <h3 class="text-center"><%=link_to inventory.name, user_inventory_path(inventory.user,inventory.id),class: 'active' %></h3>
          <h5 class="text-center"><%= button_to 'Remove', user_inventory_path(inventory.user,inventory.id), method: :delete, data: { turbo_method: :delete } ,class:'link btn text-primary'%></h5>
        </div>
        <div class="col">
          <p class="text-center"><%=inventory.description%></p>
        </div>
     </div>
    <%end%>
  </div>
</div>