<div class="food-container">

 <h1> Shopping List</h1>
    <div> 
        <div class="flex-div">
            <span>Amount of food to buy: <%= @inventories.length %> </span>
            <span>Recipe: <%= @recipe.name %> </span>
        </div>
        <div class="flex-div">
            <span>Total Value of food needed: $ <%= @total %></span>
            <span>inventory: <%=@inventory.name %>  <% user_inventory_path(current_user,@inventory.id) %></span>

        </div>
    </div>
   <table class="table">
      <thead>
        <th  class="col">Food</th>
        <th class="col">Quantity</th>
        <th class="col">Price</th>
      </thead>
      <tbody>
        <% @inventories.each do |inventory| %>
            <tr>
                <td><%= inventory.food.name %></td>
                <td><%= inventory.quantity %></td>
                <td><%= inventory.food.price * inventory.quantity %></td>
            </tr>
        <% end %>
    </tbody>
    </table>
  

</div>